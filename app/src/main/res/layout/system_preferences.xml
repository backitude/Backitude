<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" 
    android:layout_height="fill_parent" >
	<PreferenceCategory android:title="@string/category_system_settings"
		android:layout_width="fill_parent" 
        android:layout_height="fill_parent" >

		<Preference android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:layout_marginTop="10dip"
			android:title="@string/loc_sys_settings_title" android:summary="@string/loc_sys_settings_title"
			android:key="@string/loc_sys_settings_key" />

		<Preference android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:layout_marginTop="10dip"
			android:title="@string/wifi_sys_title" android:summary="@string/wifi_sys_title"
			android:key="@string/wifi_sys_key" />

	</PreferenceCategory>

	<PreferenceCategory android:title="@string/category_location"
		android:layout_width="fill_parent" 
        android:layout_height="fill_parent" >
	    
		<ListPreference android:title="@string/gpsOption_title"
			android:summary="@string/gpsOption_summary" android:key="@string/gpsOption_key"
			android:defaultValue="@string/gpsOption_default" android:entries="@array/gpsOption_entries"
			android:entryValues="@array/gpsOption_values" 
			android:layout_width="fill_parent" 
            android:layout_height="fill_parent" />

		<CheckBoxPreference android:title="@string/timezone_title"
			android:defaultValue="false" android:summary="@string/timezone_summary"
			android:key="@string/timezone_key" 
			android:layout_width="fill_parent" 
            android:layout_height="fill_parent" />
	</PreferenceCategory>
	
	<PreferenceCategory android:title="@string/category_sleep_mode"
		android:layout_width="fill_parent" 
        android:layout_height="fill_parent" >
		<CheckBoxPreference android:title="@string/wake_lock_title"
			android:defaultValue="true" android:summary="@string/wake_lock_summary"
			android:key="@string/wake_lock_key" 
			android:layout_width="fill_parent" 
            android:layout_height="fill_parent" />

		<CheckBoxPreference android:title="@string/wifi_lock_title"
			android:defaultValue="false" android:summary="@string/wifi_lock_summary"
			android:key="@string/wifi_lock_key" 
			android:layout_width="fill_parent" 
            android:layout_height="fill_parent" />
				
	</PreferenceCategory>

</PreferenceScreen>